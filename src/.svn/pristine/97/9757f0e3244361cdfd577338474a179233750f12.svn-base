    private void btnNewBoardActionPerformed() {
        new Thread(new Runnable() {
            @Override
            public void run() {
                try {
                    dc.initSectors();
                    dc.populateBoard();
                } catch (InterruptedException ex) {
                    Logger.getLogger(GameJFrame.class.getName()).log(Level.SEVERE, null, ex);
                }
            }
        }).start();
    }
