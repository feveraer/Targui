    public void activateBtnInitBoard() {
        pnlGame.activateBtnInitBoard();
    }

    public void activateBtnEditPlayer() {
        pnlPlayers.activateBtnEditPlayer();
    }

    public void btnSaveSetEnabled(boolean flag) {
